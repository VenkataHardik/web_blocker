{
    "manifest_version": 3,
    "name": "Website Blocker",
    "version": "1.0",
    "description": "Blocks specified websites",
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "storage",
      "declarativeNetRequest",
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png"
      }
    },
    "host_permissions": [
      "<all_urls>"
    ]
  }
  